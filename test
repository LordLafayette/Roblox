-- Creates a GUI that lists all items in ReplicatedStorage

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ReplicatedStorageLister"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create main frame
local mainFrame = Instance.new("Frame")
mainFrame.Parent = screenGui
mainFrame.Size = UDim2.new(0.3, 0, 0.5, 0)
mainFrame.Position = UDim2.new(0.35, 0, 0.25, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
mainFrame.Active = true
mainFrame.Draggable = true

-- Title label
local titleLabel = Instance.new("TextLabel")
titleLabel.Parent = mainFrame
titleLabel.Size = UDim2.new(1, 0, 0.1, 0)
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "ReplicatedStorage Items"
titleLabel.Font = Enum.Font.SourceSansBold
titleLabel.TextSize = 22
titleLabel.TextColor3 = Color3.new(1, 1, 1)

-- ScrollingFrame for item list
local scrollFrame = Instance.new("ScrollingFrame")
scrollFrame.Parent = mainFrame
scrollFrame.Size = UDim2.new(1, -10, 0.85, -10)
scrollFrame.Position = UDim2.new(0, 5, 0.12, 5)
scrollFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
scrollFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
scrollFrame.ScrollBarThickness = 8
scrollFrame.BorderSizePixel = 0

-- UIListLayout for vertical stacking
local listLayout = Instance.new("UIListLayout")
listLayout.Parent = scrollFrame
listLayout.SortOrder = Enum.SortOrder.LayoutOrder
listLayout.Padding = UDim.new(0, 4)

-- Function to list items
local function listItems()
    -- Clear previous
    for _, child in ipairs(scrollFrame:GetChildren()) do
        if child:IsA("TextLabel") then
            child:Destroy()
        end
    end

    -- List all items in ReplicatedStorage
    for _, item in ipairs(game.ReplicatedStorage:GetChildren()) do
        local label = Instance.new("TextLabel")
        label.Parent = scrollFrame
        label.Size = UDim2.new(1, -10, 0, 24)
        label.BackgroundTransparency = 1
        label.Text = item.Name
        label.Font = Enum.Font.SourceSans
        label.TextSize = 18
        label.TextColor3 = Color3.new(1, 1, 1)
        label.TextXAlignment = Enum.TextXAlignment.Left
    end

    -- Update canvas size
    scrollFrame.CanvasSize = UDim2.new(0, 0, 0, #game.ReplicatedStorage:GetChildren() * 28)
end

listItems()

-- Optional: Refresh button
local refreshButton = Instance.new("TextButton")
refreshButton.Parent = mainFrame
refreshButton.Size = UDim2.new(0.25, 0, 0.08, 0)
refreshButton.Position = UDim2.new(0.72, 0, 0.01, 0)
refreshButton.Text = "Refresh"
refreshButton.Font = Enum.Font.SourceSansBold
refreshButton.TextSize = 16
refreshButton.TextColor3 = Color3.new(1, 1, 1)
refreshButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)

refreshButton.MouseButton1Click:Connect(listItems)
